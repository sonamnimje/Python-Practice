import os

def solve(s):
    result = ''
    capitalize_next = True
    for c in s:
        if c == ' ':
            result += c
            capitalize_next = True
        elif capitalize_next:
            result += c.upper()
            capitalize_next = False
        else:
            result += c
    return result

if __name__ == '__main__':
    fptr = open(os.environ['OUTPUT_PATH'], 'w')

    s = input()

    result = solve(s)

    fptr.write(result + '\n')

    fptr.close()
